<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_connectiqLLTopLevel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/content_connectiqBTNShareCourse"
        style="@style/customButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="shareCourse"
        android:text="@string/btn_share_course" />

    <View
        android:id="@+id/content_connectiqVIEWDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/content_connectiqLLLogoCheckboxHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/content_connectiqIV"
            android:layout_width="225dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/imgview_connectiq_desc"
            android:scaleType="centerInside"
            android:src="@drawable/connect_iq_logo_black" />

        <CheckBox
            android:id="@+id/content_connectiqCHCKBOX"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckBoxCCIQClicked"/>

        <ImageView
            android:id="@+id/content_connectiqBTIcon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bluetooth_status_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_connectiqLLIndicatorHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/content_connectiqVIEWIndicator1"
            style="@style/contentConnectIQIndicator"
            android:layout_marginStart="4dp" />

        <View
            android:id="@+id/content_connectiqVIEWIndicator2"
            style="@style/contentConnectIQIndicator" />

        <View
            android:id="@+id/content_connectiqVIEWIndicator3"
            style="@style/contentConnectIQIndicator" />

        <View
            android:id="@+id/content_connectiqVIEWIndicator4"
            style="@style/contentConnectIQIndicator" />

        <View
            android:id="@+id/content_connectiqVIEWIndicator5"
            style="@style/contentConnectIQIndicator" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_connectiqLLGroupDevicecVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_connectiqTVDevicesLabel"
            style="@style/labelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/found_devices_label"
            android:textColor="@color/black" />

        <ScrollView
            android:id="@+id/content_connectiqSCRLVIEWDevices"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/content_connectiqTVDevicesData"
                style="@style/mainTextView"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
